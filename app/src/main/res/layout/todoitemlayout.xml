<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="#33FF"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#422D53"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <!--                    android:layout_marginBottom="15dp"-->

                <TextView
                    android:id="@+id/todo_item_tv_title"
                    android:layout_width="234dp"
                    android:layout_height="match_parent"
                    android:text="@string/textview_todo"
                    android:textAlignment="textStart"
                    android:textColor="#FAF6F6"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/todo_item_tv_complete"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:text="@string/textview_todo"
                    android:textAlignment="textEnd"
                    android:textColor="#F6F2F2"
                    android:textSize="18sp" />


                <!--                android:layout_marginLeft="20mm"-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/todo_item_tv_description"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/textview_todo"
                    android:textColor="#FAF6F6"
                    android:textSize="20sp" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/id_completed_gif"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/todo_item_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/textview_todo"
                    android:textColor="#F4EFEF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/todo_item_tv_prority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/textview_todo"
                    android:textAlignment="textEnd"
                    android:textColor="#F6F2F2"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>